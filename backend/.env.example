# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://hostel:changeme@localhost:5432/hostelixpro
# For development with SQLite:
# DATABASE_URL=sqlite:///hostelixpro.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRY_HOURS=24

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_SECONDS=300
OTP_RESEND_LIMIT=3
OTP_RATE_LIMIT_WINDOW_SECONDS=300

# Email Configuration (for OTP delivery)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@hostelixpro.com

# Security Configuration
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_SECONDS=1800
PASSWORD_MIN_LENGTH=10

# Backup Configuration
BACKUP_ENCRYPTION_ALGORITHM=AES-256-GCM
BACKUP_RETENTION_DAYS=90
BACKUP_DIRECTORY=/var/backups/hostelixpro

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000
